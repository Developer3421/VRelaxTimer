<Window x:Class="RelaxTimerApp.LanguageSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Language Selection" Height="450" Width="300"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent">
    
    <Border CornerRadius="20" Background="#2D0A31" BorderThickness="1" BorderBrush="#40FFFFFF">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <TextBlock Text="{DynamicResource SelectLanguage}" FontSize="20" FontWeight="Bold" 
                       Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            
            <StackPanel Grid.Row="1" VerticalAlignment="Center">
                <Button Content="English" Tag="en" Click="LanguageButton_Click" Style="{StaticResource FuturisticButton}" Margin="0,5"/>
                <Button Content="Українська" Tag="uk" Click="LanguageButton_Click" Style="{StaticResource FuturisticButton}" Margin="0,5"/>
                <Button Content="Deutsch" Tag="de" Click="LanguageButton_Click" Style="{StaticResource FuturisticButton}" Margin="0,5"/>
                <Button Content="Türkçe" Tag="tr" Click="LanguageButton_Click" Style="{StaticResource FuturisticButton}" Margin="0,5"/>
                <Button Content="Русский" Tag="ru" Click="LanguageButton_Click" Style="{StaticResource FuturisticButton}" Margin="0,5"/>
            </StackPanel>
            
            <Button Grid.Row="2" Content="{DynamicResource Close}" Click="CloseButton_Click" 
                    Style="{StaticResource FuturisticButton}" Margin="0,20,0,0" Background="#30FFFFFF"/>
        </Grid>
    </Border>
</Window>

