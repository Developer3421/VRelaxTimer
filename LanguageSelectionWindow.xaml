<Window x:Class="RelaxTimerApp.LanguageSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:RelaxTimerApp"
        Title="Select Language" Height="450" Width="400"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        WindowStyle="None"
        MouseDown="Window_MouseDown">

    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#10023C" Offset="0"/>
            <GradientStop Color="#3D1033" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <Border CornerRadius="20" BorderThickness="1" Padding="20">
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#80FFFFFF" Offset="0"/>
                <GradientStop Color="#40FFFFFF" Offset="1"/>
            </LinearGradientBrush>
        </Border.BorderBrush>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="{Binding Source={x:Static local:LocalizationHelper.Instance}, Path=[SelectLanguage]}" 
                       FontSize="24" FontWeight="Bold" Foreground="White" 
                       HorizontalAlignment="Center" Margin="0,0,0,20"
                       FontFamily="Segoe UI"/>

            <StackPanel Grid.Row="1" VerticalAlignment="Center">
                <Button Content="English" Click="English_Click" Margin="0,5" Height="40" Style="{StaticResource FuturisticButton}"/>
                <Button Content="Українська" Click="Ukrainian_Click" Margin="0,5" Height="40" Style="{StaticResource FuturisticButton}"/>
                <Button Content="Deutsch" Click="German_Click" Margin="0,5" Height="40" Style="{StaticResource FuturisticButton}"/>
                <Button Content="Türkçe" Click="Turkish_Click" Margin="0,5" Height="40" Style="{StaticResource FuturisticButton}"/>
                <Button Content="Русский" Click="Russian_Click" Margin="0,5" Height="40" Style="{StaticResource FuturisticButton}"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>

