<Window x:Class="RelaxTimerApp.UserAgreementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="User Agreement" Height="500" Width="400"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent">
    
    <Border CornerRadius="20" Background="#2D0A31" BorderThickness="1" BorderBrush="#40FFFFFF">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <TextBlock Text="{DynamicResource UserAgreementTitle}" FontSize="20" FontWeight="Bold" 
                       Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <TextBlock Text="{DynamicResource AgreementText}" TextWrapping="Wrap" 
                           Foreground="#DDFFFFFF" FontSize="14" LineHeight="20"/>
            </ScrollViewer>
            
            <StackPanel x:Name="ButtonsPanel" Grid.Row="2" Orientation="Horizontal" 
                        HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button x:Name="AcceptButton" Content="{DynamicResource Accept}" Click="AcceptButton_Click" 
                        Style="{StaticResource FuturisticButton}" Margin="5,0" Width="100" Background="#4000FF00"/>
                <Button x:Name="DeclineButton" Content="{DynamicResource Decline}" Click="DeclineButton_Click" 
                        Style="{StaticResource FuturisticButton}" Margin="5,0" Width="100" Background="#40FF0000"/>
                <Button x:Name="CloseButton" Content="{DynamicResource Close}" Click="CloseButton_Click" 
                        Style="{StaticResource FuturisticButton}" Margin="5,0" Width="100" Visibility="Collapsed"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>

