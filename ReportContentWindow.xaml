<Window x:Class="RelaxTimerApp.ReportContentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Report Content" Height="450" Width="400"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent">
    
    <Border CornerRadius="20" Background="#2D0A31" BorderThickness="1" BorderBrush="#40FFFFFF">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <TextBlock Text="{DynamicResource ReportContentTitle}" FontSize="20" FontWeight="Bold" 
                       Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,10"/>
            
            <TextBlock Grid.Row="1" Text="{DynamicResource ReportContentDescription}" 
                       TextWrapping="Wrap" Foreground="#AAFFFFFF" Margin="0,0,0,10"/>
            
            <TextBox Grid.Row="2" x:Name="ReportTextBox" Style="{StaticResource FuturisticTextBox}" 
                     VerticalScrollBarVisibility="Auto" AcceptsReturn="True" TextWrapping="Wrap"/>
            
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Content="{DynamicResource SaveReport}" Click="SaveButton_Click" 
                        Style="{StaticResource FuturisticButton}" Margin="5,0" Background="#40FF7A00"/>
                <Button Content="{DynamicResource Close}" Click="CloseButton_Click" 
                        Style="{StaticResource FuturisticButton}" Margin="5,0" Background="#30FFFFFF"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>

