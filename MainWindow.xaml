<Window x:Class="RelaxTimerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:RelaxTimerApp"
        Title="Relax Timer" Height="600" Width="450"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        WindowStyle="None" MouseDown="Window_MouseDown">
    
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#10023C" Offset="0"/>
            <GradientStop Color="#3D1033" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    
    <Window.Resources>
        <!-- Button styles -->
        <Style x:Key="TimerPresetButton" TargetType="Button">
            <Setter Property="Width" Value="65"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="8" BorderThickness="0">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="0" BlurRadius="10" Color="#FF7A00" Opacity="0.4"/>
                            </Border.Effect>
                            <!-- No need for complex binding, just use the border corner radius -->
                            <Grid>
                                <Border x:Name="glow" Opacity="0.2" Background="White" 
                                        CornerRadius="8" Height="0"/>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                                <Setter TargetName="glow" Property="Height" Value="20"/>
                                <Setter TargetName="glow" Property="Opacity" Value="0.4"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                                <Setter TargetName="glow" Property="Height" Value="5"/>
                                <Setter TargetName="glow" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="ControlButton" TargetType="Button">
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="38"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="10" BorderThickness="0">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="0" BlurRadius="15" Color="#FF7A00" Opacity="0.4"/>
                            </Border.Effect>
                            <Grid>
                                <Border x:Name="glow" Opacity="0.2" Background="White" 
                                        CornerRadius="10" Height="0"/>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                                <Setter TargetName="glow" Property="Height" Value="{Binding ActualHeight, RelativeSource={RelativeSource TemplatedParent}}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.6"/>
                                <Setter TargetName="glow" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- TextBox style -->
        <Style x:Key="FuturisticTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#20FFFFFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="12" Background="{TemplateBinding Background}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="0" Padding="0"
                                          VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#30FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="Background" Value="#40FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- ScrollViewer Style -->
        <Style x:Key="FuturisticScrollViewer" TargetType="ScrollViewer">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollViewer">
                        <Grid>
                            <ScrollContentPresenter x:Name="PART_ScrollContentPresenter"
                                                    Content="{TemplateBinding Content}"
                                                    ContentTemplate="{TemplateBinding ContentTemplate}"
                                                    Margin="{TemplateBinding Padding}"
                                                    CanContentScroll="{TemplateBinding CanContentScroll}"/>
                            <ScrollBar x:Name="PART_VerticalScrollBar"
                                       Orientation="Vertical"
                                       Visibility="Hidden"
                                       Value="{Binding VerticalOffset, ElementName=PART_ScrollContentPresenter, Mode=OneWay}"
                                       Maximum="{Binding ScrollableHeight, ElementName=PART_ScrollContentPresenter, Mode=OneWay}"
                                       ViewportSize="{Binding ViewportHeight, ElementName=PART_ScrollContentPresenter, Mode=OneWay}"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger SourceName="PART_VerticalScrollBar" Property="Visibility" Value="Visible">
                                <Setter TargetName="PART_VerticalScrollBar" Property="Margin" Value="0,0,5,0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Chat Bubble Styles -->
        <Style x:Key="ChatBubbleTextBlock" TargetType="TextBlock">
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="MaxWidth" Value="350"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        
        <Style x:Key="UserChatBubble" TargetType="Border">
            <Setter Property="Background" Value="#FF7A00"/>
            <Setter Property="CornerRadius" Value="16,16,0,16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="2" BlurRadius="5" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Margin" Value="40,4,4,4"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>
        
        <Style x:Key="AIChatBubble" TargetType="Border">
            <Setter Property="Background" Value="#9C27B0"/>
            <Setter Property="CornerRadius" Value="16,16,16,0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="2" BlurRadius="5" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Margin" Value="4,4,40,4"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
    </Window.Resources>
    
    <Border CornerRadius="20" BorderThickness="1" Padding="1">
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#80FFFFFF" Offset="0"/>
                <GradientStop Color="#40FFFFFF" Offset="1"/>
            </LinearGradientBrush>
        </Border.BorderBrush>
        
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.4" Color="#FF7A00"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="45"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Custom Title Bar -->
            <Border Grid.Row="0" CornerRadius="20,20,0,0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#80000000" Offset="0"/>
                        <GradientStop Color="#40000000" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                
                <Grid>
                    <TextBlock Text="RELAX TIMER" FontWeight="SemiBold" FontSize="14" 
                               Foreground="#EEFFFFFF" VerticalAlignment="Center" 
                               Margin="20,0,0,0" FontFamily="Segoe UI">
                        <TextBlock.Effect>
                            <BlurEffect Radius="0.4"/>
                        </TextBlock.Effect>
                    </TextBlock>

                    
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <Button Style="{StaticResource TimerPresetButton}" Content="20:00" 
                                Click="SetTimer20_Click"/>
                        <Button Style="{StaticResource TimerPresetButton}" Content="30:00" 
                                Click="SetTimer30_Click"/>
                        <Button Style="{StaticResource TimerPresetButton}" Content="40:00" 
                                Click="SetTimer40_Click"/>
                                    <Button Content="{Binding Source={x:Static local:LocalizationHelper.Instance}, Path=[Custom]}" Style="{StaticResource TimerPresetButton}" 
                                            Background="#30FFFFFF" 
                                            Click="SetTimerCustom_Click"/>
                        
                        <Button Width="32" Height="32" Margin="8,0,10,0" 
                                Click="Close_Click" Background="Transparent" BorderThickness="0">
                            <Button.Content>
                                <Grid>
                                    <Ellipse Width="32" Height="32" Fill="#30FFFFFF"/>
                                    <Path Data="M18,18 L14,14 M14,18 L18,14" 
                                          Stroke="White" StrokeThickness="1.5"/>
                                </Grid>
                            </Button.Content>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Timer and Clock Display -->
            <Grid Grid.Row="1" Margin="0,15,0,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Text="{Binding Source={x:Static local:LocalizationHelper.Instance}, Path=[TimeForMyself]}" FontSize="18" FontWeight="Light" 
                           Foreground="#EEFFFFFF" HorizontalAlignment="Center" 
                           FontFamily="Segoe UI Light">
                    <TextBlock.Effect>
                        <BlurEffect Radius="0.3"/>
                    </TextBlock.Effect>
                </TextBlock>
                
                <Border Grid.Row="1" Width="180" Height="180" Margin="0,15,0,5" 
                        CornerRadius="90" Background="#20FFFFFF" 
                        HorizontalAlignment="Center">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="0" BlurRadius="20" 
                                          Color="#FF7A00" Opacity="0.3"/>
                    </Border.Effect>
                    
                    <Grid>
                        <Ellipse Width="170" Height="170" Stroke="#40FFFFFF" StrokeThickness="1">
                            <Ellipse.Effect>
                                <BlurEffect Radius="1"/>
                            </Ellipse.Effect>
                        </Ellipse>
                        
                        <!-- Outer Ring with Glow -->
                        <Ellipse Width="160" Height="160" StrokeThickness="2">
                            <Ellipse.Stroke>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#FF7A00" Offset="0"/>
                                    <GradientStop Color="#9C27B0" Offset="1"/>
                                </LinearGradientBrush>
                            </Ellipse.Stroke>
                            <Ellipse.Effect>
                                <BlurEffect Radius="2"/>
                            </Ellipse.Effect>
                        </Ellipse>
                        
                        <!-- Actual Timer Display -->
                        <TextBlock x:Name="TimerText" Text="10:00" FontSize="60" FontWeight="Light" 
                                   Foreground="#FFFFFF" HorizontalAlignment="Center" 
                                   VerticalAlignment="Center" FontFamily="Segoe UI Light">
                            <TextBlock.Effect>
                                <DropShadowEffect ShadowDepth="0" BlurRadius="10" 
                                                  Color="#FF7A00" Opacity="0.7"/>
                            </TextBlock.Effect>
                        </TextBlock>
                    </Grid>
                </Border>
                
                <!-- Timer Controls -->
                <StackPanel Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center" 
                            Margin="0,10,0,0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="{Binding Source={x:Static local:LocalizationHelper.Instance}, Path=[Start]}" Style="{StaticResource ControlButton}" 
                                Click="StartButton_Click"/>
                        <Button Content="{Binding Source={x:Static local:LocalizationHelper.Instance}, Path=[Pause]}" Style="{StaticResource ControlButton}" 
                                Click="PauseButton_Click"/>
                        <Button Content="{Binding Source={x:Static local:LocalizationHelper.Instance}, Path=[Reset]}" Style="{StaticResource ControlButton}" 
                                Click="ResetButton_Click"/>
                    </StackPanel>
                    
                    <!-- Language and Agreement buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                        <Button Content="{Binding Source={x:Static local:LocalizationHelper.Instance}, Path=[OpenLanguageSelection]}"
                                Style="{StaticResource TimerPresetButton}"
                                Width="80"
                                Height="32"
                                Margin="5,0"
                                Click="OpenLanguageSelection_Click"/>
                        <Button Content="{Binding Source={x:Static local:LocalizationHelper.Instance}, Path=[OpenUserAgreement]}"
                                Style="{StaticResource TimerPresetButton}"
                                Width="80"
                                Height="32"
                                Margin="5,0"
                                Click="OpenUserAgreement_Click"/>
                        <Button Content="{Binding Source={x:Static local:LocalizationHelper.Instance}, Path=[ReportAIContent]}"
                                Style="{StaticResource TimerPresetButton}"
                                Width="80"
                                Height="32"
                                Margin="5,0"
                                Click="OpenReportContent_Click"/>
                    </StackPanel>
                </StackPanel>
            </Grid>

            <!-- Chat History with Futuristic Styling -->
            <Border Grid.Row="2" Margin="15,5" Background="#15FFFFFF" CornerRadius="16">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled"
                              Padding="10,5">
                    <StackPanel x:Name="ChatStackPanel" VerticalAlignment="Top"/>
                </ScrollViewer>
            </Border>

            <!-- User Input Area -->
            <Grid Grid.Row="3" Margin="15,5,15,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBox x:Name="UserInputTextBox" Grid.Column="0" Height="40" 
                         Style="{StaticResource FuturisticTextBox}" MaxLength="100" 
                         KeyDown="UserInputTextBox_KeyDown"
                         ToolTip="{Binding Source={x:Static local:LocalizationHelper.Instance}, Path=[ChatPlaceholder]}"/>
                
                <Button Grid.Column="1" Margin="8,0,0,0" Content="{Binding Source={x:Static local:LocalizationHelper.Instance}, Path=[Send]}" Width="75" Height="40"
                        Click="SendChat_Click" Style="{StaticResource ControlButton}"/>
            </Grid>
            
            <!-- Decorative Elements -->
            <Canvas Grid.RowSpan="4">
                <!-- Abstract Shape 1 -->
                <Path Canvas.Left="-20" Canvas.Top="120" Data="M0,0 C20,15 40,5 60,30 C80,55 100,45 120,80" 
                      Stroke="#30FF7A00" StrokeThickness="1.5" Opacity="0.4">
                    <Path.Effect>
                        <BlurEffect Radius="2"/>
                    </Path.Effect>
                </Path>
                
                <!-- Abstract Shape 2 -->
                <Path Canvas.Right="-20" Canvas.Bottom="120" Data="M0,80 C20,45 40,55 60,30 C80,5 100,15 120,0" 
                      Stroke="#309C27B0" StrokeThickness="1.5" Opacity="0.4">
                    <Path.Effect>
                        <BlurEffect Radius="2"/>
                    </Path.Effect>
                </Path>
            </Canvas>
        </Grid>
    </Border>
</Window>